<!DOCTYPE html>
<html>
<head>
    <meta name="application-name" content="Helen Gruber Infographics">
    <meta name="description" content="Helen Gruber Infographics">
    <%= stylesheet_link_tag "freestyle" %>
    <%= javascript_include_tag "jquery-1.5.1.min" %>
    <%= javascript_include_tag "util" %>
    <%= javascript_include_tag "ajax" %>
    <%= javascript_include_tag "configuration" %>
    <%= javascript_include_tag "iWidget" %>
    <%= javascript_include_tag "pageWorker" %>
</head>
<body>

<div id="container">
        <header>
                <div id="user_nav">
  		  <% if current_user %>
    		    Logged in as <%= current_user.email %>.
    		    <%= link_to "Log out", log_out_path %>
  		  <% else %>
    		    <!--%= link_to "log in", log_in_path %-->
  		  <% end %>
		</div>
                <div id="menu">
                  <%= yield :menu %>
            	</div>
                <div id="messages">
                  <% flash.each do |name, msg| %>
  		    <%= content_tag :div, msg, {:id => "flash_#{name}", :class => "#{name}"} %>
		  <% end %>
                </div>
        </header>

        <section>
            <div id="body">
	      <%= yield %>
            </div>
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
